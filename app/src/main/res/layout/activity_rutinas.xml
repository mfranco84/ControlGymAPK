<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rutinas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myfirstapp.Rutinas"
    app:layout_collapseParallaxMultiplier="0.9">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/rgDias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioGroup>

        <RadioButton
            android:text="L"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rgDias"
            android:layout_toRightOf="@+id/rgDias"
            android:layout_toEndOf="@+id/rgDias"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="46dp"
            android:id="@+id/radioButton9" />

        <RadioButton
            android:text="M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioButton10"
            android:layout_toRightOf="@+id/radioButton10"
            android:layout_toEndOf="@+id/radioButton10"
            android:id="@+id/radioButton11" />

        <RadioButton
            android:text="J"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioButton11"
            android:layout_toRightOf="@+id/radioButton11"
            android:layout_toEndOf="@+id/radioButton11"
            android:id="@+id/radioButton12" />

        <RadioButton
            android:text="V"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioButton12"
            android:layout_toRightOf="@+id/radioButton12"
            android:layout_toEndOf="@+id/radioButton12"
            android:id="@+id/radioButton13" />

        <RadioButton
            android:text="S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioButton13"
            android:layout_toRightOf="@+id/radioButton13"
            android:layout_toEndOf="@+id/radioButton13"
            android:id="@+id/radioButton14" />

        <RadioButton
            android:text="D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/radioButton14"
            android:layout_toRightOf="@+id/radioButton14"
            android:layout_toEndOf="@+id/radioButton14"
            android:id="@+id/radioButton15" />

        <RadioButton
            android:text="K"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton10"
            android:layout_alignBaseline="@+id/radioButton9"
            android:layout_alignBottom="@+id/radioButton9"
            android:layout_toRightOf="@+id/radioButton9"
            android:layout_toEndOf="@+id/radioButton9" />

        <TextView
            android:text="Rutina a Realizar "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textView3"
            android:textSize="18sp"
            android:layout_below="@+id/radioButton11"
            android:layout_toRightOf="@+id/radioButton10"
            android:layout_toEndOf="@+id/radioButton10" />


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_marginTop="12dp"
            android:id="@+id/editText8"
            android:enabled="false"
            android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
            android:gravity="center"
            android:height="350dp"
            android:editable="false"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/ratingBar" />




    </RelativeLayout>
    <ListView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:id="@+id/drawer"
        android:layout_gravity="start"
        android:background="#D8D0D0"
        >

    </ListView>

</android.support.v4.widget.DrawerLayout>
